<div class="container">
<h1 class="text-center"> Want to buy this item </h1>
<style>
  .custom-carousel {
    max-width: 500px; /* Adjust the width as per your preference */
    margin: 0 auto;
  }
</style>
<div class="container-fluid">
<% if @item.images.attached? %>
  <div id="carouselExample" class="carousel slide custom-carousel" data-bs-ride="carousel">
    <div class="carousel-inner">
      <% @item.images.each_with_index do |image, index| %>
        <div class="carousel-item <%= 'active' if index == 0 %>">
          <%= image_tag image, class: "d-block w-100", style: "width: 500px; height: 300px;" %>
        </div>
      <% end %>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
<% else %>
  <p>No image available.</p>
<% end %>
<style>
  .item-info {
    background-color: #f8f9fa;
    padding: 20px;
    border-radius: 5px;
    margin-top: 20px;
  }
  
  .item-info ul {
    list-style-type: none;
    padding: 0;
    margin: 0;
  }
  
  .item-info li {
    margin-bottom: 10px;
  }
  
  .item-info strong {
    font-weight: bold;
  }
</style>
 <div class="text-center">

            <%= form_with(model: Conversation.new, url: conversations_path) do |form| %>
              <%= form.hidden_field :recipient_id, value: @item.user_id %>
              <%= form.button(type: 'submit', class: " button-design btn btn-primary") do %>
                <%= content_tag(:i, nil, class: 'fa fa-brands fa-whatsapp ') %>
                Chat
              <% end %>             
            <% end %>
            </div>

<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="item-info">
      <ul class="list-unstyled">
        <li><strong>Ad Title:</strong> <%= @item.title %></li>
        <li><strong>Ad Description:</strong> <%= @item.description %></li>
        <li><strong>Seller Name:</strong> <%= @item.username %></li>
        <li><strong>Phone:</strong> <%= @item.phone %></li>
        <li><strong>City:</strong> <%= @item.city %></li>
        <li><strong>Category:</strong> <%= @item.category.category %></li>
      </ul>
    </div>
  </div>
</div>

</div>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
  <%= form_with(model: [@item, @review], url: item_reviews_path(@item), method: :post, html: { class: 'form' }) do |form| %>
    <div class="form-group">
      <%= form.label :content, "Review" %>
      <%= form.text_area :content, rows: 2, class: 'form-control mb-3' %>
    </div>
    <div class="form-group">
      <%= form.label :rating, "Rating" %>
<%= form.select :rating, (1..5).to_a, { prompt: 'Select rating' } %>
    </div>
    <%= form.submit "Submit Review", class: 'button-design' %>
  <% end %>
  </div>
</div>
</div>
  <h2 class="text-center">Reviews</h2>
  
    <div class="row">
    <% @item.reviews.each do |review| %>
      <div class="col-md-4">
        <div class="card">
          <div class="card-body">
            <h5>Buyer: <%= current_user.username %></h5>
           <strong> <p class="card-text">Rating:</strong> <%= review.rating  %> Star</p>
            <strong><p class="card-text">Content:</strong> <%= review.content %></p>
            <!-- Other review details -->
          </div>
        </div>
      </div>
    <% end %>
  </div>
  
</div>

</div>



 <%#= button_to 'Start Chatting', chatting_path(sender_id: current_user) %>
