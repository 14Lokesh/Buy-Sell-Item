<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h2 class="text-center mb-4">Show Advertisement</h2>
      <%= form_with model: @item, url: items_path, class: "my-form" do |form| %>
        <div class="form-group ">
          <%= form.label :Adtitle , class: 'required' %>
          <%= form.text_field :title, class: "form-control",required: true %>
          <p class='error'><%= show_errors(@item, :title) %></p>
        </div>
        <div class="form-group mt-3">
          <%= form.label :Category , class: 'required' %>
          <%= form.select :category_id, options_for_select(Category.all.map { |category| [category.name, category.id] }), { prompt: 'Select Category' }, required: true  %>
        </div>
        <div class="form-group">
          <%= form.label :Description, class: 'required' %>
          <%= form.text_area :description, class: "form-control", rows: 3,required: true %>
           <p class='error'><%= show_errors(@item, :description) %></p>
        </div>
        <div class="form-group">
          <%= form.label :Username, class: 'required' %>
          <%= form.text_field :username, class: "form-control",required: true %>
           <p class='error'><%= show_errors(@item, :username) %></p>
        </div>
        <div class="form-group">
          <%= form.label :Phone, class: 'required' %>
          <%= form.text_field :phone, class: "form-control",required: true %>
          <p class='error'><%= show_errors(@item, :phone) %></p>
        </div>
        <div class="form-group">
          <%= form.label :City, class: 'required' %>
          <%= form.text_field :city, class: "form-control",required: true %>
          <p class='error'><%= show_errors(@item, :city) %></p>
        </div>
        <div class="form-group mt-3">
          <%= form.label :Images,class: 'required' %>
          <%= form.file_field :images, multiple: true, class: "form-control-file", required: true %>
          <p class='error'><%= show_errors(@item, :images) %></p>
        </div>
        <div class="text-center">
          <%= form.submit "Submit", class: "btn btn-primary btn-lg button-design form-control mt-5" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
