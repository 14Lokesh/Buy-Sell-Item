<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h2 class="text-center mb-4">Show Advertisement</h2>
      
      <%= form_with model: @item, url: items_path, class: "my-form" do |form| %>
      
        <div class="form-group">
          <%= form.label :Adtitle %>
          <%= form.text_field :title, class: "form-control" %>
          <p class='error'><%= show_errors(@item, :title) %></p>
        </div>
        
        <div class="form-group mt-3">
          <%= form.label :Category %>
          <%= form.select :category_id, options_for_select(Category.all.map { |category| [category.category, category.id] }) %>
          <p class='error'><%= show_errors(@item, :category_id) %></p>
        </div>
        
        <div class="form-group">
          <%= form.label :Description %>
          <%= form.text_area :description, class: "form-control", rows: 3 %>
           <p class='error'><%= show_errors(@item, :description) %></p>
        </div>
        
        <div class="form-group">
          <%= form.label :Username %>
          <%= form.text_field :username, class: "form-control" %>
           <p class='error'><%= show_errors(@item, :username) %></p>
        </div>
        
        <div class="form-group">
          <%= form.label :Phone %>
          <%= form.text_field :phone, class: "form-control" %>
          <p class='error'><%= show_errors(@item, :phone) %></p>
        </div>
        
        <div class="form-group">
          <%= form.label :City %>
          <%= form.text_field :city, class: "form-control" %>
          <p class='error'><%= show_errors(@item, :city) %></p>
        </div>
        
        <div class="form-group mt-3">
          <%= form.label :Images %>
          <%= form.file_field :images, multiple: true, class: "form-control-file" %>
          <p class='error'><%= show_errors(@item, :images) %></p>
        </div>
        
        <div class="text-center">
          <%= form.submit "Submit", class: "btn btn-primary btn-lg button-design form-control mt-5" %>
        </div>
      
      <% end %>
    </div>
  </div>
</div>































