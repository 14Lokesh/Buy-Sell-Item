<div class='container'>
  <h2 class="text-center mb-4 mt-4">All Category</h2>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <table class="table">
        <thead>
          <tr>
            <th>Category</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.name %></td>
              <td>
                <%= link_to 'Edit', edit_admin_category_path(current_user.id,category.id), class: 'btn btn-primary' %>
                <%= link_to 'Delete', admin_category_path(current_user.id,category.id), method: :delete, data: { confirm: 'Are you sure you want to delete this category?' }, class: 'btn btn-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="text-center">
  <%= paginate @categories, class: 'pagination' %>
</div>
