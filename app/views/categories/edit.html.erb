<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with model: @category, url: admin_category_path, method: :patch, class: "my-form" do |form| %>
        <div class="form-group mt-4">
          <%= form.label :Edit_category, class: 'required' %>
          <%= form.text_field :name, class: "form-control", placeholder: "Enter Category", required: true %>
          <p class='error'><%= show_errors(@category, :name) %></p>
        </div>
        <%= form.submit "Update", class: "mt-3 form-control button-design" %>
      <% end %>
    </div>
  </div>
</div>
