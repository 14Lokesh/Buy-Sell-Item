<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="text-center">Sign up</h1>
      <%= form_with model: @user, url: users_path, class: "my-form" do |form| %>
        <div class="form-group">
          <%= form.label :username %>
          <%= form.text_field :username, class: "form-control", placeholder: "Enter Your Name" , required: true%>
          <p class='error'><%= show_errors(@user, :username) %></p>
        </div>
        <div class="form-group">
          <%= form.label :email %>
          <%= form.email_field :email, class: "form-control", placeholder: "Enter Your Email", required: true%>
           <p class='error'><%= show_errors(@user, :email) %></p>       
        </div>
        <div class="form-group">
          <%= form.label :password %>
          <%= form.password_field :password, class: "form-control", placeholder: "Enter Your Password", required: true%>
           <p class='error'><%= show_errors(@user, :password) %></p>       
        </div>
        <div class="form-group">
          <%= form.label :password_confirmation %>
          <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Your Password", required: true%>
           <p class='error'><%= show_errors(@user, :password_confirmation) %></p>       
        </div>     
        <%= form.submit "Sign Up", class: " mt-3 button-design form-control" %>     
      <% end %>
      <div class="text-center">
        <%= button_to 'Sign up with Google', '/auth/google_oauth2', class: "btn btn-outline-danger btn-block mt-3 form-control" %>
        <%= button_to 'Sign up with Facebook', '/auth/facebook', class: "btn btn-outline-primary btn-block mt-3 form-control" %>
      </div>
    </div>
  </div>
</div>



