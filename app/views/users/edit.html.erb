<h1 class="text-center">Change Email</h1>

<div class="container mx-auto w-50">
  <%= form_with model: @user, url: user_path do |form| %>
    <div class="form-group my-3">
      <%= form.label :email, class: "form-label required" %>
      <%= form.email_field :email, placeholder: "Enter Your Email", class: "form-control" %>
    </div>   
    <%= form.submit "Change Email", class: "btn btn-primary form-control button-design" %>
  <% end %>
</div>
