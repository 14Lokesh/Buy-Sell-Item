.flash-message {
  position: fixed;
  top: 0; /* Position the message at the top */
  left: 50%; /* Position the message 50% from the left */
  transform: translateX(-50%); /* Center the message horizontally */
  width: 400px; /* Set the desired width */
  /* background-color: white; */
  padding: 20px;
  border-radius: 5px;
