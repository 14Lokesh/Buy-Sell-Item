  <!-- Your navbar and other content here -->
  
  <!-- Flash Modal -->
<% if flash.notice %>
  <div class="modal flash-modal" id="flashModal" tabindex="-1" role="dialog" aria-labelledby="flashModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <%# <div class="modal-content"> %>
        <%# <div class="modal-body"> %>
          <div class="alert alert-success flash-message">
            <%= flash.notice %>
          <%# </div> %>
        <%# </div> %>
      </div>
    </div>
  </div>
  <script>
    $(document).ready(function() {
      $('#flashModal').modal('show');
      setTimeout(function() {
        $('#flashModal').modal('hide');
      }, 1000);
    });
  </script>
<% end %>