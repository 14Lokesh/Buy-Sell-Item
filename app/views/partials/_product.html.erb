<div class="container-fluid">
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">
    <% @item.each do |item| %>
      <% if item.approved %>
        <div class="col mb-4">
          <div class="card" style="width: 18rem;">
            <% if item.images.attached? %>
              <%= image_tag url_for(item.images.first), class: "card-img-top" %>
            <% else %>
              <p class="text-center">No image available.</p>
            <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= item.title %></h5>
              <p class="card-text"><%= item.description %></p>
              <p><strong>Category:</strong> <%= item.category.category %></p>
              <p><strong>City:</strong> <%= item.city %></p>
              <% if !Current.user&.admin%>
                <div class="text-center" >
                  <%= button_to 'Interested', interested_path(item), method: :post, class: "btn btn-primary button-design" %>
                </div>
              <%else%>
                <div class="text-center">
                  <%= link_to 'View More', product_path(item), class: "btn btn-primary button-design" %>
                </div>
              <%end%>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
