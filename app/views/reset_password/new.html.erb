<h1 class="text-center">Forget Password</h1>
<div class="container mx-auto w-50">
  <%= form_with(url: reset_password_path, method: :post) do |form| %>
    <div class="form-group my-3">
      <%= form.label :email, class: "form-label required"%>
      <%= form.email_field :email,placeholder: "Enter Your Email", class: "form-control",required: true %>
    </div>
    <%= form.submit "Send Mail", class: "btn btn-primary form-control button-design" %>
  <% end %>
</div>
